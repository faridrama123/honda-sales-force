<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/llmain"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_margin="@dimen/dp30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
                                         >
        <TextView
                android:text="@string/updatecdbsuccess"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ttitle"
                android:textSize="@dimen/dp18"
                android:textColor="@color/black"
                android:textAlignment="center"/>



        <ImageView
                android:src="@drawable/img_success"
                android:id="@+id/img"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"/>


        <TextView
                android:text="@string/bento"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tname"
                android:textSize="@dimen/dp14"
                android:textColor="@color/gray"
                android:textAlignment="center"/>

        <TextView

                android:layout_marginLeft="@dimen/dp20"
                android:layout_gravity="start"
                android:text="tanggal followup\n asdasd"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tdesc"
                android:textSize="@dimen/dp14"
                android:textColor="@color/gray"
                android:textAlignment="textStart"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tclose"
            android:layout_marginRight="-20dp"
            android:layout_marginTop="-30dp"
            android:textSize="@dimen/dp30"
            android:layout_alignRight="@id/llmain"
            android:text="X"
            android:layout_alignTop="@+id/llmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</RelativeLayout>