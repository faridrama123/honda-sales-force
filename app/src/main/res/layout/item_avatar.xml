<RelativeLayout
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        grid:layout_columnWeight="1"
>




    <LinearLayout
            android:id="@+id/llframe"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/dp20"
            android:background="@drawable/circle_transparant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imgavatar"
                android:src="@drawable/icon_diamond_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lltext"
            android:orientation="vertical"
            android:layout_below="@id/llframe"
            android:layout_alignLeft="@id/llframe"
            android:layout_alignRight="@id/llframe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tlevel"
                android:textColor="@color/black"
                android:textSize="@dimen/dp12"
                android:text="Diamond"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tscore"
                android:textSize="@dimen/dp18"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="8205"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </LinearLayout>




    <RelativeLayout
            android:id="@+id/lldisable"
            android:background="@drawable/circle_transparant_gray"
            android:layout_alignRight="@id/llframe"
            android:layout_alignLeft="@id/llframe"
            android:layout_alignTop="@id/llframe"
            android:layout_alignBottom="@id/llframe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    </RelativeLayout>
    <ImageView
            android:id="@+id/imglock"
            android:layout_alignRight="@id/llframe"
            android:src="@drawable/icon_locked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>