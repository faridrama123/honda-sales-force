<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/graylight"

        tools:context=".view.activity.ChangeAvatarActivity">


    <RelativeLayout android:background="@color/white" android:id="@+id/bar" android:layout_width="match_parent" android:layout_height="wrap_content">

        <include layout="@layout/action_bar" />

    </RelativeLayout>




        <!--<ScrollView-->
                <!--android:layout_above="@id/bsubmit"-->
                <!--android:layout_below="@id/bar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent">-->



            <RelativeLayout
    android:layout_above="@id/bsubmit"
    android:layout_below="@id/bar"
                    android:layout_width="match_parent" android:layout_height="match_parent">
                <androidx.gridlayout.widget.GridLayout

                        xmlns:grid="http://schemas.android.com/apk/res-auto"
                        android:foregroundGravity="fill_horizontal"
                        android:id="@+id/gridavatar"
                        grid:alignmentMode="alignBounds"
                        grid:columnCount="2"
                        grid:rowOrderPreserved="false"
                        grid:useDefaultMargins="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </RelativeLayout>


        <!--</ScrollView>-->













    <RelativeLayout
            android:layout_marginBottom="@dimen/dp20"
            android:layout_alignParentBottom="true"
            android:id="@+id/bsubmit"

            android:layout_marginRight="@dimen/dp30"
            android:layout_marginLeft="30dp"
            android:background="@drawable/round_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_margin="@dimen/dp5"
                android:layout_centerHorizontal="true"
                android:text="@string/save"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



    </RelativeLayout>


</RelativeLayout>