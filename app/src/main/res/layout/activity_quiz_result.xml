<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.LoginActivity">
    <RelativeLayout
            android:id="@+id/topbar"
            android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content">

        <include layout="@layout/action_bar"/>

    </RelativeLayout>

    <ScrollView
            android:layout_below="@id/topbar"
            android:layout_centerInParent="true"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout
                android:layout_marginTop="@dimen/dp10"

                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/imgresult"
                    android:src="@drawable/img_kuis_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>




            <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/square_menu"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp20"
                    android:paddingLeft="@dimen/dp60"
                    android:paddingRight="@dimen/dp60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/dp12"
                        android:text="@string/thanksquiz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:id="@+id/tscore"
                        android:textStyle="bold"
                        android:textColor="@color/greencalm"
                        android:textSize="@dimen/dp30"
                        android:text="100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tmsg"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/dp12"
                        android:text="@string/niceresult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>




            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:id="@+id/bretake"
                        android:layout_marginTop="@dimen/dp40"
                        android:layout_marginRight="@dimen/dp30"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/round_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:gravity="center"
                            android:id="@+id/tretake"
                            android:padding="@dimen/dp5"
                            android:layout_centerHorizontal="true"
                            android:text="@string/ambilkuis"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/bback"
                        android:layout_marginTop="@dimen/dp40"
                        android:layout_marginRight="@dimen/dp30"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/round_red"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:gravity="center"
                            android:id="@+id/tback"
                            android:padding="@dimen/dp5"
                            android:layout_centerHorizontal="true"
                            android:text="@string/backtohome"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



                </RelativeLayout>
            </LinearLayout>




        </LinearLayout>

    </ScrollView>



</RelativeLayout>