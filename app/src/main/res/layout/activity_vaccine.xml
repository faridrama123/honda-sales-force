<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.VaccineActivity">


    <include layout="@layout/action_bar" android:id="@+id/bar"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dp30"
        android:orientation="vertical"
        android:id="@+id/llvaccine1"
        app:layout_constraintTop_toBottomOf="@id/bar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/dp20"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/status_vaksin_pertama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:background="@drawable/border_red"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/dp15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:background="@color/transparat"
                android:hint="@string/jabatan"
                android:id="@+id/spvaccine1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"/>

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp20"
        android:orientation="vertical"
        android:id="@+id/llvaccine1reason"
        app:layout_constraintTop_toBottomOf="@id/llvaccine1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/dp20"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/alasan_belum_vaksin_pertama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:background="@drawable/border_red"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/dp15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:background="@color/transparat"
                android:hint="@string/jabatan"
                android:id="@+id/spvaccine1reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"/>

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp20"

        android:orientation="vertical"
        android:id="@+id/llvaccine2"
        app:layout_constraintTop_toBottomOf="@id/llvaccine1reason"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/dp20"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/status_vaksin_kedua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:background="@drawable/border_red"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/dp15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:background="@color/transparat"
                android:hint="@string/jabatan"
                android:id="@+id/spvaccine2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"/>

        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp20"

        android:orientation="vertical"
        android:id="@+id/llvaccine2reason"
        app:layout_constraintTop_toBottomOf="@id/llvaccine2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="@dimen/dp20"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/alasan_belum_vaksin_kedua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:background="@drawable/border_red"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/dp15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_dropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:background="@color/transparat"
                android:hint="@string/jabatan"
                android:id="@+id/spvaccine2reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp30"/>

        </RelativeLayout>


    </LinearLayout>



    <TextView
        android:id="@+id/tvupdatevaccine"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="@dimen/dp8"
        android:gravity="center"
        android:text="@string/update_with_arrow"
        android:textColor="@color/white"
        android:background="@drawable/round_red"
        android:layout_margin="@dimen/dp20"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>