<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:padding="@dimen/dp10"
                android:background="@drawable/square_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">




    <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/gridwidh"
            android:layout_height="@dimen/gridheigh"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:src="@drawable/icon_apparel" />
    <TextView
            android:visibility="gone"
            android:id="@+id/tnew"
            android:textSize="@dimen/dp12"
            android:layout_marginTop="@dimen/dp5"
            android:layout_alignRight="@id/img"
            android:text="@string/baru"
            android:background="@color/reds"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img"
            android:layout_alignLeft="@+id/img"
            android:layout_alignRight="@+id/img"
            android:layout_alignStart="@+id/img"
            android:layout_below="@+id/img"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="12dp" />
</RelativeLayout>
