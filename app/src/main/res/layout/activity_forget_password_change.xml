<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.LoginActivity">


    <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/dp25"
                android:text="@string/changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:textColor="@color/gray"
                android:textSize="@dimen/dp12"
                android:text="@string/changepassworddesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




        <RelativeLayout
                android:layout_marginTop="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_alignTop="@id/etpassword"
                    android:layout_alignBottom="@id/etpassword"
                    android:id="@+id/imgpassword"
                    android:src="@drawable/icon_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:background="@color/transparat"
                    android:layout_toRightOf="@id/imgpassword"
                    android:layout_toEndOf="@id/imgpassword"
                    android:hint="@string/passwordhint"
                    android:id="@+id/etpassword"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/imgeye"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/etpassword"
                    android:layout_alignBottom="@id/etpassword"
                    android:id="@+id/imgeye"
                    android:src="@drawable/icon_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_below="@+id/etpassword"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/reds"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_alignTop="@id/etconfpassword"
                    android:layout_alignBottom="@id/etconfpassword"
                    android:id="@+id/imgpassword1"
                    android:src="@drawable/icon_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:background="@color/transparat"
                    android:layout_toRightOf="@id/imgpassword1"
                    android:layout_toEndOf="@id/imgpassword1"
                    android:hint="@string/passwordconf"
                    android:id="@+id/etconfpassword"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@id/imgconfeye"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/etconfpassword"
                    android:layout_alignBottom="@id/etconfpassword"
                    android:id="@+id/imgconfeye"
                    android:src="@drawable/icon_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_below="@+id/etconfpassword"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/reds"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/bsubmit"
                android:layout_marginTop="@dimen/dp40"
                android:layout_marginRight="@dimen/dp30"
                android:layout_marginLeft="30dp"
                android:background="@drawable/round_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_margin="@dimen/dp5"
                    android:layout_centerHorizontal="true"
                    android:text="@string/masuk"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>