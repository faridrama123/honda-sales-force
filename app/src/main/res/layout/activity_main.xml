<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.MainActivity">

    <com.langit7.hondasalesforce.Util.CanScrollViewPager
            android:id="@+id/view_pager"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tabs" />

    <com.langit7.hondasalesforce.Util.CustomTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top"
        android:background="@color/white"
        app:tabIndicatorColor="@color/reds"
        app:tabMaxWidth="0dp"
        app:tabTextAppearance="@style/MainTabText" />


    <ImageView
            android:id="@+id/fabuser"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_above="@id/tabs"
            android:layout_alignParentRight="true"
            android:src="@drawable/floating_btn"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"/>


</RelativeLayout>