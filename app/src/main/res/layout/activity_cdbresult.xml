<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.LoginActivity">
    <RelativeLayout
            android:id="@+id/topbar"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp100">

        <include layout="@layout/action_bar"/>
    </RelativeLayout>

    <ScrollView
            android:layout_below="@id/topbar"
            android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout
                android:layout_marginTop="@dimen/dp10"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/imgresult"
                    android:src="@drawable/img_prospect_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/square_menu"
                    android:layout_marginLeft="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp20"
                    android:paddingLeft="@dimen/dp60"
                    android:paddingRight="@dimen/dp60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/dp12"
                        android:text="@string/cdbresult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <RelativeLayout
                    android:id="@+id/bback"
                    android:layout_marginTop="@dimen/dp40"
                    android:layout_marginRight="@dimen/dp30"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/round_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:gravity="center"
                        android:id="@+id/tback"
                        android:padding="@dimen/dp5"
                        android:layout_centerHorizontal="true"
                        android:text="@string/backtohome"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>