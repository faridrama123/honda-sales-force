<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/reds"

        tools:context=".view.activity.ArticleDetailActivity">

    <ImageView
            android:layout_marginLeft="@dimen/dp20"
            android:id="@+id/imgfilter"
            android:padding="@dimen/dp10"
            android:src="@drawable/icon_filter"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView

            android:gravity="center"
            android:layout_alignTop="@+id/imgfilter"
            android:layout_alignBottom="@id/imgfilter"
            android:text="@string/filter"
            android:layout_toRightOf="@+id/imgfilter"
            android:textSize="@dimen/dp14"
            android:textColor="@color/white"
            android:id="@+id/tfilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

<RelativeLayout
        android:background="@color/gray"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_toRightOf="@+id/tfilter"
        android:layout_alignTop="@id/imgfilter"
        android:layout_alignBottom="@id/imgfilter"
        android:layout_width="1dp"
        android:layout_height="1dp"></RelativeLayout>

    <ImageView

            android:id="@+id/imgsearch"
            android:padding="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/imgfilter"
            android:layout_alignBottom="@id/imgfilter"
            android:src="@drawable/icon_search_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <EditText
            android:textSize="@dimen/dp14"
            android:id="@+id/etsearch"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:hint="@string/cari"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/imgfilter"
            android:layout_alignBottom="@id/imgfilter"
            android:background="@color/transparat"
            android:layout_toLeftOf="@+id/imgsearch"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_toRightOf="@+id/tfilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</RelativeLayout>