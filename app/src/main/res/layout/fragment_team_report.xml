<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graylight"
    tools:context=".view.activity.MainActivity">
    <RelativeLayout android:paddingBottom="@dimen/dp10" android:id="@+id/topbar" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include layout="@layout/action_bar" android:id="@+id/bar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@id/slider"
            android:columnCount="2"
            android:layout_marginTop="@dimen/dp8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rlFrequent"
                android:layout_margin="@dimen/dp3"
                android:background="@color/bgIconTimReport"
                android:layout_width="@dimen/menusizewM"
                android:layout_height="@dimen/menusizehM">
                <TextView
                    android:id="@+id/tvFrequent"
                    android:layout_centerHorizontal="true"
                    android:text="@string/mFrequent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp12"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tvFrequent"
                    android:id="@+id/imgFrequent"
                    android:scaleType="centerInside"
                    android:layout_width="@dimen/imagemenusizeM"
                    android:layout_height="@dimen/imagemenusizeM"
                    android:src="@drawable/m_frequent"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlPartisipant"
                android:layout_margin="@dimen/dp3"
                android:background="@color/bgIconTimReport"
                android:layout_width="@dimen/menusizewM"
                android:layout_height="@dimen/menusizehM">
                <TextView
                    android:id="@+id/tvPartisipant"
                    android:layout_centerHorizontal="true"
                    android:text="@string/mPartisipant"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp12"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tvPartisipant"
                    android:id="@+id/imgPartisipant"
                    android:scaleType="centerInside"
                    android:layout_width="@dimen/imagemenusizeM"
                    android:layout_height="@dimen/imagemenusizeM"
                    android:src="@drawable/m_partisipant"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlQuiz"
                android:layout_margin="@dimen/dp3"
                android:background="@color/bgIconTimReport"
                android:layout_width="@dimen/menusizewM"
                android:layout_height="@dimen/menusizehM">
                <TextView
                    android:id="@+id/tvQuiz"
                    android:layout_centerHorizontal="true"
                    android:text="@string/mQuiz"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp12"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tvQuiz"
                    android:id="@+id/imgQuiz"
                    android:scaleType="centerInside"
                    android:layout_width="@dimen/imagemenusizeM"
                    android:layout_height="@dimen/imagemenusizeM"
                    android:src="@drawable/m_quiz"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlQualified"
                android:layout_margin="@dimen/dp3"
                android:background="@color/bgIconTimReport"
                android:layout_width="@dimen/menusizewM"
                android:layout_height="@dimen/menusizehM">
                <TextView
                    android:id="@+id/tvQualified"
                    android:layout_centerHorizontal="true"
                    android:text="@string/mQualified"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp12"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tvQualified"
                    android:id="@+id/imgQualified"
                    android:scaleType="centerInside"
                    android:layout_width="@dimen/imagemenusizeM"
                    android:layout_height="@dimen/imagemenusizeM"
                    android:src="@drawable/m_qualified"/>
            </RelativeLayout>


        </GridLayout>



    </RelativeLayout>


</RelativeLayout>